#include <stdio.h>
#define M 30
S()
{
    printf("*************************\n");
}
struct PersonalInfo
{
    char pname[M];
    int Class;
}P;
main()
{
    int opt;
    printf("enter name=");
    scanf("%s",P.pname);
    printf("enter class=");
    scanf("%d",&P.Class);
    S();
    printf("Hello %s of class %d\nAnd\nWelcome to Calculator\n",P.pname,P.Class);
    S();
    printf("Select option\n1-Add\n2-Substract\n3-Multiply\n4-Divide");
    scanf("%d",&opt);
}
