#include <stdio.h>
main()
{
    float a,b;
    int opt;
    printf("enter first no.=");
    scanf("%f",&a);
    printf("enter second no.=");
    scanf("%f",&b);
    printf("********************");
    printf("\nselect option\n1-Add\n2-Substract\n3-Multiply\n4-Divide\n********************\nenter option=");
    scanf("%d",&opt);
    printf("\n********************\n");
    switch(opt)
    {
        case 1:printf("Addition is %0.3f",a+b);
        break;
        case 2:printf("Substraction is %0.3f",a-b);
        break;
        case 3:printf("Multiplication is %0.3f",a*b);
        break;
        case 4:printf("Division is %f",a/b);
        break;
        default:printf("Invalid no.");
        break;
    }
}
